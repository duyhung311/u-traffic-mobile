<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_report_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:stateListAnimator="@null"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:text="Gửi cảnh báo"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_traffic_status_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:backgroundTint="@color/gray"
            android:stateListAnimator="@null"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:text="Thông tin giao thông"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_report_question" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rating_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:backgroundTint="@color/gray"
            android:stateListAnimator="@null"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:text="Đánh giá"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_traffic_status_question" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_find_direction_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:stateListAnimator="@null"
            android:text="Tìm kiếm đường đi"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_rating_question" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>