<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:layout_height="match_parent">

    <TextView
        android:drawableTop="@drawable/ic_location_reb"
        android:drawablePadding="8dp"
        android:drawableTint="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Thu thập vị trí của bạn"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        android:id="@+id/tv1"/>

    <TextView
        android:id="@id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:padding="16dp"
        android:text="Để chúng tôi có thể theo dõi tình trạng giao thông tại vị trí hiện tại của bạn, Vui lòng cấp quyền cho ứng dụng truy cập vào vị trí của bạn."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Utraffic sẽ thu thập vị trí của bạn ở chế độ nền để cảnh báo ùn tắc giao thông, tìm đường đi tốt nhất và gửi tình trạng giao thông lên hệ thống."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtNext"
        android:gravity="bottom|right"
        android:text="Đã hiểu, tiếp theo"
        android:textSize="18dp"
        android:padding="50dp"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>